<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_friend_adapter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_contact_picture_2"/>

    <TextView
        android:id="@+id/friend_adapter_username"
        android:layout_width="95dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="@string/username"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/avatar_friend_adapter"
        app:layout_constraintTop_toTopOf="@+id/avatar_friend_adapter" />

    <ImageView
        android:id="@+id/add_btn_friend_adapter"
        android:layout_width="40dp"
        android:layout_height="29dp"

        android:layout_margin="16dp"

        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_menu_invite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/start_conversation_btn_friend_adapter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.761" />

    <ImageView
        android:id="@+id/start_conversation_btn_friend_adapter"
        android:layout_width="45dp"
        android:layout_height="31dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_menu_start_conversation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>