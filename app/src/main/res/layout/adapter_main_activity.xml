<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_user_adapter_main"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/username_user_adapter_main"
        android:layout_width="95dp"
        android:layout_height="17dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="@string/username"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/avatar_user_adapter_main"
        app:layout_constraintTop_toTopOf="@+id/avatar_user_adapter_main" />

    <TextView
        android:id="@+id/last_message"
        android:layout_width="305dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical"
        android:text="@string/last_message_adapter"
        app:layout_constraintBottom_toBottomOf="@+id/avatar_user_adapter_main"
        app:layout_constraintStart_toEndOf="@+id/avatar_user_adapter_main" />

    <TextView
        android:id="@+id/time_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/time"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/last_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.875" />
</androidx.constraintlayout.widget.ConstraintLayout>