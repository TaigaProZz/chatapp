<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/chat"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/chat"
        android:supportsRtl="true"
        android:theme="@style/Theme.Material3.Dark.NoActionBar">

        <activity
            android:name=".mainActivity.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".UserProfileActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mainActivity.MainActivity" />
        </activity>

        <activity
            android:name=".mainActivity.FriendFragment"
            android:exported="false">

        </activity>
        <activity
            android:name=".conversation.NewConversationActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mainActivity.MainActivity" />
        </activity>
        <activity
            android:name=".account.avatar.AvatarChoiceActivity"
            android:exported="false" />
        <activity
            android:name=".account.AccountMainActivity"
            android:exported="true" />
        <activity
            android:name=".account.register.RegisterEmailActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".account.AccountMainActivity" />
        </activity>
        <activity
            android:name=".account.login.LoginEmailActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".account.AccountMainActivity" />
        </activity>
        <activity
            android:name=".conversation.ChatActivity"
            android:exported="false">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".mainActivity.MainActivity" />
        </activity>
    </application>

</manifest>